<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
	..\FrameXML\UI.xsd">
	
<Font name="BG_CountFontOutline" font="Fonts\skurri.ttf" virtual="true" outline="NORMAL">
	<FontHeight>
		<AbsValue val="14"/>
	</FontHeight>
	<Color r="1.0" g="1.0" b="1.0"/>
</Font>

<Button name="BG_Display" parent="UIParent" frameStrata="LOW" clampedToScreen="true" movable="true" enableMouse="true" virtual="true">
	<Size>
		<AbsDimension x="40" y="40"/>
	</Size>
	<Anchors>
		<Anchor point="CENTER"/>
	</Anchors>
	<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
		<BorderColor r="0" g="0" b="0" a="1"/>
		<Color r="0" g="0" b="0" a="0.75"/>
		<EdgeSize>
			<AbsValue val="16"/>
		</EdgeSize>
		<TileSize>
			<AbsValue val="16"/>
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="5" right="5" top="5" bottom="5"/>
		</BackgroundInsets>
	</Backdrop>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parentIcon" setAllPoints="true" parentKey="icon" />
		</Layer>
		<Layer level="OVERLAY">
			<Texture name="$parentBorder" file="Interface\Buttons\UI-Debuff-Overlays" parentKey="border">
				<Size>
					<AbsDimension x="40" y="40"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="-1" y="1"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="1" y="-1"/>
					</Anchor>
				</Anchors>
				<TexCoords left="0.296875" right="0.5703125" top="0" bottom="0.515625"/>
			</Texture>
			<FontString name="$parentCount" inherits="BG_CountFontOutline" justifyH="RIGHT" parentKey="count">
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="$parentTimeleft" inherits="BG_CountFontOutline" justifyH="RIGHT" parentKey="timeleft">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
</Button>
 

</Ui>
