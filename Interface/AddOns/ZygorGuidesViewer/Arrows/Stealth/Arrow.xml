<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/FrameXML/UI.xsd">

	<Script file="Arrow.lua"/>

	<Button name="ZygorGuidesViewerFrame_Arrow_template_stealth" virtual="true" hidden="false" movable="true" enableMouse="false" frameStrata="MEDIUM" clampedToScreen="true">
		<Size x="50" y="50"/>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" />
		</Anchors>
		<Layers>
			<!--
			<Layer level="BACKGROUND">
				<Texture parentKey="back" file="shadow" opacity="0.5">
					<Size x="90" y="60"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" ><Offset x="0" y="0"/></Anchor>
					</Anchors>
				</Texture>
			</Layer>
			-->
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture parentKey="precise" name="$parentPrecise" file="__arrow-precise" subLevel="2">
					<Size x="30" y="30"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" ><Offset x="0" y="0"/></Anchor>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="turn" looping="NONE">
							<Rotation parentKey="anim" degrees="360" duration="0" smoothing="NONE" order="1" />
							<Translation duration="10.0" smoothing="NONE" order="2"><Scripts><OnPlay>self:GetParent():Pause()</OnPlay></Scripts></Translation>
						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="3">
				<Texture parentKey="special" name="$parentSpecial" file="__arrow-here" subLevel="1">
					<Size x="40" y="40"/>
					<Anchors> <Anchor point="CENTER" relativePoint="CENTER" /> </Anchors>
					<Animations>
						<AnimationGroup parentKey="here" looping="BOUNCE">
							<Translation duration="0.5" smoothing="OUT" order="1" offsetX="0" offsetY="15"><Scripts><OnPlay>local me=self:GetRegionParent() ; me:SetSize(40,40)  me:SetTexCoord(0.0,0.5,0.0,0.5)</OnPlay></Scripts></Translation>
						</AnimationGroup>
						<AnimationGroup parentKey="upstairs" looping="ONCE">
							<Translation duration="10.0" order="1"><Scripts><OnPlay>local me=self:GetRegionParent() ; me:SetSize(60,60)  me:SetTexCoord(0.5,1.0,0.0,0.5)</OnPlay></Scripts></Translation>
						</AnimationGroup>
						<AnimationGroup parentKey="downstairs" looping="ONCE">
							<Translation duration="10.0" order="1"><Scripts><OnPlay>local me=self:GetRegionParent() ; me:SetSize(60,60)  me:SetTexCoord(0.5,1.0,0.5,1.0)</OnPlay></Scripts></Translation>
						</AnimationGroup>
						<AnimationGroup parentKey="waiting" looping="LOOP">
							<Rotation duration="1.0" degrees="360" order="1"><Scripts><OnPlay>local me=self:GetRegionParent() ; me:SetSize(40,40)  me:SetTexCoord(0.0,0.5,0.5,1.0)</OnPlay></Scripts></Rotation>
						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>

			<Layer level="ARTWORK" textureSubLevel="3">
				<FontString parentKey="title" name="$parentTitle" justifyH="CENTER" justifyV="TOP" inherits="GameFontHighlightSmall" subLevel="2">
					<Anchors>
						<Anchor relativeTo="$parent" relativePoint="BOTTOM" point="TOP"><Offset x="0" y="3"/></Anchor>
					</Anchors>
					<Size x="200" y="0"/>
					<FontHeight val="10"/>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Frame parentKey="arrow" name="$parentArrow">
				<Size x="50" y="33" />
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER" />
				</Anchors>
			  <Layers>
				 <Layer level="ARTWORK" textureSubLevel="1">
					<Texture parentKey="arr" name="$parentArr" file="__arrow" textureSubLevel="2" subLevel="2" setAllPoints="true" />
					<Texture parentKey="arrspecular" name="$parentArrowspecular" file="__arrow" textureSubLevel="3" subLevel="3" setAllPoints="true" alphaMode="ADD" />
				 </Layer>
			  </Layers>
				<Animations>
					<AnimationGroup parentKey="turn" looping="NONE">
						<Rotation parentKey="anim" degrees="360" duration="0" smoothing="NONE" order="1" />
						<Translation duration="10.0" smoothing="NONE" order="2"><Scripts><OnPlay>self:GetParent():Pause()</OnPlay></Scripts></Translation>
					</AnimationGroup>
					<AnimationGroup parentKey="redflash" looping="ONCE">
						<Animation parentKey="redf" duration="0.5" maxFramerate="15" smoothing="OUT" order="2">
							<Scripts>
								<OnUpdate>
									local pro=self:GetSmoothProgress()
									self:GetRegionParent().arr:SetVertexColor(1.0,1.0-pro,1.0-pro)
								</OnUpdate>
							</Scripts>
						</Animation>
					</AnimationGroup>
				</Animations>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad>
			self:ClearAllPoints()
			self:SetPoint("CENTER",ZygorGuidesViewerPointer_ArrowCtrl,"CENTER")
			</OnLoad>
			<OnDragStart> ZygorGuidesViewerPointer_ArrowCtrl:StartMoving() self.dragging=true </OnDragStart>
			<OnDragStop> ZygorGuidesViewerPointer_ArrowCtrl:StopMovingOrSizing()  self.dragging=nil</OnDragStop>
			<OnShow> ZygorGuidesViewer.Pointer.ArrowFrame_OnShow(self) </OnShow>
			<OnMouseWheel> self:OnMouseWheel(delta) </OnMouseWheel>
		</Scripts>
	</Button>
</Ui>
